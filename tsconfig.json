{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "theme": ["./src/theme/*"]
    }
  },
  "types": ["vite/client", "jest", "@types/testing-library__jest-dom", "@types/react", "@testing-library/jest-dom"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "package.json", "jest.setup.js"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["./dist/**/*", "node_modules", "**/*.svg", "./example/**/*"]
}
